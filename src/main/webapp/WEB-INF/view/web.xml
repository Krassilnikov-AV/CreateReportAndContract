         version="4.0">
	<!--описание ресурса специальным набором тегов-->
	<display-name>PoolDB</display-name>
	<resource-ref>
		<description>DB Connection</description>  <!--какое то описани-->
		<res-ref-name>jdbc/schedule</res-ref-name> <!--то имя, через которое будем искать данный ресурс-->
		<!--
		1. DataSource (интерфейс)- ссылка на ресурс, который предназначен для работы с пуллом коннектов.
		2. Работать ресурс будет с указанным именем, <res-ref-name>
		3. Ресурс создаётся не внутри приложения, он создается на самом сервере, у каждого сервера создание по своей
		документации
		-->
		<res-type>javax.sql.DataSource</res-type>
		<!--
		авторизация к пулл коннект содержится не внутри приложения,
		об этом позаботится сам сервер
		-->
		<res-auth>Container</res-auth>
	</resource-ref>
